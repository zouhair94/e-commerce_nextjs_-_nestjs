{
  "name": "my-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "turbo run dev --filter=@app/frontend",
    "dev:backend": "turbo run dev --filter=@app/backend",
    "build": "turbo run build",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.7.2"
  }
}